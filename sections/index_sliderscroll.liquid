<div class="container-fluid{% unless section.settings.topoffset %} offset-0{% endunless %}" data-sectionname="index_sliderscroll">
  <div class="row">
    {% if section.blocks.size > 0 %}
    <div class="slider-scroll">
      <ul class="nav-slider-scroll">
        {% for block in section.blocks %}{% assign item = block.settings %}
        <li{% if forloop.first %} class="active"{% endif %}><a href="{{ item.link }}"></a></li>
        {% endfor %}
      </ul>
      {% for block in section.blocks %}{% assign item = block.settings %}
      <div class="item" {{ block.shopify_attributes }}>
        {% if item.image == blank %}{% include "get_svg" type:'image' size:'1920x900px' %}
        {% else %}<img src="{{ item.image | img_url: '2048x' }}" alt="{{ item.image.alt }}">
        {% endif %}
        <div class="description{% if item.position == 'left' %} point-left{% elsif item.position == 'right' %} point-right{% endif %}">
          <div class="block-table">
            <div class="block-table-cell">
              {% if item.text1 != '' %}<p style="color:{{ item.color_title }}">{{ item.text1 }}</p>{% endif %}
              {% if item.text2 != '' %}<div class="title" style="color:{{ item.color_title2 }}">{{ item.text2 }}</div>{% endif %}
              {% if item.showbtn %}<a href="{{ item.link }}" class="btn btn-lg" style="color:{{ item.cbtntext }}; background:{{ item.cbtnbg }};" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-bgc="{{ item.cbtnbg }}" data-abgc="{{ item.acbtnbg }}" data-hovercolors>{{ section.settings.btnname }}</a>{% endif %}
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}
  </div>
</div>

{% schema %}
