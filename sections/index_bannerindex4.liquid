<div class="container-fluid{% unless section.settings.topoffset %} offset-0{% endunless %}">
  <div class="row custom-layout indent-col-none">
    {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}{%- assign item = block.settings -%}
    {%- assign itemsize = item.itemsize -%}
    {%- capture info_image_size -%}
    {%- case itemsize -%}
    {%- when 'item-small' -%}725x640
    {%- else -%}1195x640px
    {%- endcase -%}
    {%- endcapture -%}
    <div class="{{ itemsize }}">
      <a href="{{ item.link }}" class="promo-box{% if section.settings.imagehover %} zoom-in{% endif %} design-default" data-hovercolors>
        {% if item.image == blank %}{% include "get_svg" type:'image' size:info_image_size %}
        {% else %}<img src="{{ item.image | img_url: '2048x2048' }}" alt="{{ item.image.alt }}">
        {% endif %}
        {% if item.showdescription %}
        <div class="description{% if item.align == "left" %} left-offset text-center{% endif %}">
          <div class="block-table">
            <div class="block-table-cell">
              {% unless item.image2 == blank %}
              <div>
                <img class="img-responsive" src="{{ item.image2 | img_url: '200x' }}" alt="{{ item.image2.alt }}">
              </div>
              {% endunless %}
              {% if item.title != '' %}<div class="title" style="color:{{ item.color_title }}">{{ item.title }}</div>{% endif %}
              {% if item.content != '' %}<p style="color:{{ item.color_title2 }}">{{ item.content }}</p>{% endif %}
              {% if item.showbtn %}{% if item.buttontype == "background" %}
              <span class="btn btn-lg" style="color:{{ item.cbtntext }}; background:{{ item.cbtnbg }};" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-bgc="{{ item.cbtnbg }}" data-abgc="{{ item.acbtnbg }}">{{ section.settings.btnname }}</span>
              {% else %}
              <span class="btn btn-lg btn-border" style="color:{{ item.cbtntext }}; border-color:{{ item.cbtnbg }};" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-borc="{{ item.cbtnbg }}" data-aborc="rgba(0,0,0,0)" data-bgc="rgba(0,0,0,0)" data-abgc="{{ item.acbtnbg }}">{{ section.settings.btnname }}</span>
              {% endif %}{% endif %}
            </div>
          </div>
        </div>
        {% endif %}
      </a>
    </div>
    {% endfor %}
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}
  </div>
</div>

