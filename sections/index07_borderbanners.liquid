<div class="container{% unless section.settings.topoffset %} offset-0{% endunless %}">
  <div class="row">
    {% if section.blocks.size > 0 %}
    <div class="{% if section.settings.mobile_carousel %}carousel-products-mobile{% endif %} custom-layout">
      {% for block in section.blocks %}{%- assign item = block.settings -%}
      <div class="col-sm-6" {{ block.shopify_attributes }}>
        <a href="{{ item.link }}" class="promo-box{% if section.settings.imagehover %} zoom-in{% endif %} design-07"{% if item.show_border %} style="border: 1px solid {{ item.border_color }}" data-borc="{{ item.border_color }}" data-aborc="{{ item.aborder_color }}"{% endif %} data-hovercolors>
          {% if item.image == blank %}
          	{% if item.showdescription %}<img src="{{ 'banner_bg.png' | asset_url }}" alt="Banner">
          	{% else %}{% include "get_svg" type:'image' size:'600x600' %}
          	{% endif %}
          {% else %}<img src="{{ item.image | img_url: 'grande' }}" alt="{{ item.image.alt }}">
          {% endif %}
          {% if item.showdescription %}
          <div class="description">
            <div class="block-table">
              <div class="block-table-cell">
                {% if item.title != '' %}<div class="title" style="color:{{ item.color_title }}">{{ item.title }}</div>{% endif %}
                {% if item.content != '' %}<p style="color:{{ item.color_title2 }}">{{ item.content }}</p>{% endif %}
                {% if item.showbutton %}<span class="btn btn-lg" style="color:{{ item.cbtntext }}; background:{{ item.cbtnbg }};" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-bgc="{{ item.cbtnbg }}" data-abgc="{{ item.acbtnbg }}">{{ section.settings.btnname }}</span>{% endif %}
              </div>
            </div>
          </div>
          {% endif %}
        </a>
      </div>
      {% endfor %}
    </div>
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}
  </div>
</div>


