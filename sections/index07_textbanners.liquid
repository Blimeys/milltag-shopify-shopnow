<div class="container{% unless section.settings.topoffset %} offset-0{% endunless %}">
  <div class="row">
    {% if section.blocks.size > 0 %}
    <div class="custom-layout{% if section.settings.mobile_carousel %} carousel-products-mobile-md{% endif %}">
      {% for block in section.blocks %}{%- assign item = block.settings -%}
      <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4" {{ block.shopify_attributes }}>
        <a href="{{ item.link }}" class="services-block-border height-md" style="border-color: {{ section.settings.color_border }}; background: {{ section.settings.color_bg }};" data-borc="{{ section.settings.color_border }}" data-aborc="{{ section.settings.color_active }}" data-hovercolors>
          <div class="block-table">
            <div class="block-table-cell">
              {% if item.showicon %}<span class="icon icon-{{ item.icon }}" style="color:{{ section.settings.color_icon }};"></span>{% endif %}
              {% if item.text1 != '' %}<div class="title" style="color:{{ section.settings.color_title }};" data-c="{{ section.settings.color_title }}" data-ac="{{ section.settings.color_active }}">{{ item.text1 }}</div>{% endif %}
              {% if item.text2 != '' %}<p style="color:{{ section.settings.color_text }};">{{ item.text2 }}</p>{% endif %}
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}
  </div>
</div>

