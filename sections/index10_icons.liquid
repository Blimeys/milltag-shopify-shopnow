<div class="container{% unless section.settings.top_indent %} offset-0{% endunless %}" data-section-id="{{ section.id }}">
  <div class="row">
    <div class="menu-content">
      {% if section.blocks.size > 0 %}
      <ul>
        {% for block in section.blocks %}
        <li {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" data-hovercolors>
            {% if block.settings.image == blank %}<img src="{{ 'admin_icon.png' | asset_url }}">
            {% else %}<img src="{{ block.settings.image | img_url: '130x' }}" alt="{{ block.settings.image.alt }}">
            {% endif %}
            <span class="title" style="color:{{ section.settings.color_title }}" data-c="{{ section.settings.color_title }}" data-ac="{{ section.settings.color_hover }}">{{ block.settings.item_title }}</span>
          </a>
        </li>
        {% endfor %}
      </ul>
      {% else %}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {% endif %}
    </div>
  </div>
</div>

