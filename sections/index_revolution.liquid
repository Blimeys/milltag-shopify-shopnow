<div class="container-fluid{% unless section.settings.top_indent %} offset-0{% endunless %}" data-sectionname="index_revolution">
  <div class="row">
    {% if section.blocks.size > 0 %}
    <div class="slider-revolution{% unless settings.header_position %} revolution-default{% endunless %}" data-speed="{{ section.settings.delay_time }}">
      <div class="tp-banner-container">
        <div class="tp-banner revolution">
          <ul>
            {% for block in section.blocks %}
            {% if block.settings.image != blank %}{% assign img_url = block.settings.image | img_url: 'x1024' %}
            {% else %}{% assign img_url = 'template_slider.png' | asset_url %}
            {% endif %}
            <li data-thumb="{{ img_url }}" data-transition="fade" data-slotamount="1" data-masterspeed="1000" data-saveperformance="off"  data-title="Slide"{% if block.settings.show_item_button != 'yes' and block.settings.banner_link != blank %} data-link="{{ block.settings.banner_link }}"{% endif %}>
              {% if block.settings.show_customhtml == 'no' %}
              
              {% if block.settings.show_video == "yes" %}
              <div class="tp-caption tp-fade fadeout fullscreenvideo"
                   data-x="0"
                   data-y="0"
                   data-speed="600"
                   data-start="0"
                   data-easing="Power4.easeOut"
                   data-endspeed="1500"
                   data-endeasing="Power4.easeIn"
                   data-autoplay="true"
                   data-autoplayonlyfirsttime="false"
                   data-nextslideatend="true"
                   data-forceCover="1"
                   data-dottedoverlay="twoxtwo"
                   data-aspectratio="16:9"
                   data-forcerewind="on"
                   style="z-index: 2">
                <video class="video-js vjs-default-skin" preload="none" poster='{{ img_url }}' data-setup="{}">
                  <source src='{{ block.settings.video_url | replace: "http:", "" | replace: "https:", ""  }}' />
                </video>
              </div>
              <div class="tp-caption  tp-fade"
                   data-x="right"
                   data-y="bottom"
                   data-voffset="-60"
                   data-hoffset="-90"
                   data-speed="600"
                   data-start="900"
                   data-easing="Power4.easeOut"
                   data-endeasing="Power4.easeIn"
                   data-responsive_offset="off"
                   style="z-index: 7;">
                <div class="video-play">
                  <a class="icon icon-play_circle_filled btn-play" href="#"></a>
                  <a class="icon icon-pause_circle_filled btn-pause" href="#"></a>
                </div>
              </div>
              {% else %}
              <img src="{{ img_url }}" alt="{{ block.settings.image.alt }}" data-bgposition="center {{ block.settings.position }}" data-bgfit="cover" data-bgrepeat="no-repeat" >
              {% endif %}
              
              {% capture infoposition %}{% if block.settings.infoposition == "value" %}{{ block.settings.info_point }}{% else %}{{ block.settings.infoposition }}{% endif %}{% endcapture %}
              {% capture ani %}{% if block.settings.infoposition == "value" %}lfl{% elsif block.settings.infoposition == "right" %}lfr{% else %}lfb{% endif %}{% endcapture %}
              {% capture offset %}{% if block.settings.infoposition == "value" %}0{% elsif block.settings.infoposition == "right" %}-{{ block.settings.info_point }}{% else %}0{% endif %}{% endcapture %}
              {% if block.settings.show_infoblock == 'yes' %}
              <div class="tp-caption tp-resizeme {{ ani }} stb text-{{ infoposition }}"
                   data-x="{{ infoposition }}"
                   data-y="center"
                   data-hoffset="{{ offset }}"
                   data-voffset="-20"
                   data-speed="600"
                   data-start="900"
                   data-easing="Power4.easeOut"
                   data-endeasing="Power4.easeIn"
                   data-responsive_offset="on"
                   style="z-index: 2;">
                {% if block.settings.text1 != '' %}<div class="tp-caption1-wd-1" style="color:{{ block.settings.color_text1 }}">{{ block.settings.text1 }}</div>{% endif %}
                {% if block.settings.text2 != '' %}<div class="tp-caption1-wd-2" style="color:{{ block.settings.color_text2 }}">{{ block.settings.text2 }}</div>{% endif %}
                {% if block.settings.show_item_button == 'yes' %}
                <div class="tp-caption1-wd-3"><a href="{{ block.settings.banner_link }}" class="btn btn-lg" style="color:{{ block.settings.color_textbase }}; background:{{ block.settings.color_bgbase }};" data-c="{{ block.settings.color_textbase }}" data-ac="{{ block.settings.color_textactive }}" data-bgc="{{ block.settings.color_bgbase }}" data-abgc="{{ block.settings.color_bgactive }}" data-hovercolors>{{ section.settings.button_title }}</a></div>
                {% endif %}
              </div>
              {% endif %}
              
              {% else %}{{ block.settings.code }}
              {% endif %}
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}
  </div>
</div>


