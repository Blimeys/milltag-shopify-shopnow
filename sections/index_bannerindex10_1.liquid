{%- capture info_image_size -%}960x900px{%- endcapture -%}
<div class="container-fluid{% unless section.settings.topoffset %} offset-0{% endunless %}">
  <div class="row indent-col-none custom-layout">
    {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}{%- assign item = block.settings -%}
    <div class="col-sm-6" {{ block.shopify_attributes }}>
      <a href="{{ item.link }}" class="promo-box{% if section.settings.imagehover %} zoom-in{% endif %} design-08" data-hovercolors>
        {% if item.image == blank %}{% include "get_svg" type:'image' size:info_image_size %}
        {% else %}<img src="{{ item.image | img_url: 'grande' }}" alt="{{ item.image.alt }}">
        {% endif %}
        {% if item.showdescription %}
        <div class="description">
          <div class="block-table">
            <div class="block-table-cell">
              {% if item.content != '' %}<p style="color:{{ item.color_title }}">{{ item.content }}</p>{% endif %}
              {% if item.title != '' %}<div class="title" style="color:{{ item.color_title2 }}">{{ item.title }}</div>{% endif %}
              {% if item.showbtn %}<span class="btn btn-lg" style="color:{{ item.cbtntext }}; background:{{ item.cbtnbg }};" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-bgc="{{ item.cbtnbg }}" data-abgc="{{ item.acbtnbg }}">{{ section.settings.btnname }}</span>{% endif %}
            </div>
          </div>
        </div>
        {% endif %}
      </a>
    </div>
    {% endfor %}
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Banners Index 10_1",
  "class": "index-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "topoffset",
      "label": "Top Offset",
