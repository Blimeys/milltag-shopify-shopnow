        },
        {
          "type": "color",
          "id": "acbtntext",
          "label": "Active Text Color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banners Index 10_1",
      "category": "Banner",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item",
          "settings": {
            "content": "Our Experience Gives us the Ability to",
            "title": "Create Stunning Webstore",
            "cbtnbg": "#fe4135"
          }
        }
      ]
    }
  ]
}
{% endschema %}