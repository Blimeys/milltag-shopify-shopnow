{% if section.settings.show_widget %}
<div class="content offset-56"><hr></div>
<div class="content offset-56">
  <div class="row">
    {% if section.blocks.size > 0 %}
    <div class="custom-layout{% if section.settings.mobile_carousel %} carousel-products-mobile{% endif %}">
      {% for block in section.blocks %}{%- assign item = block.settings -%}
      <div class="col-xs-{{ section.settings.items }} col-sm-6 col-md-{{ section.settings.items }}" {{ block.shopify_attributes }}>
        {% if block.type == 'item' %}
        
        <a href="{{ item.link }}" class="promo-box{% if section.settings.imagehover %} zoom-in{% endif %} design-01" data-hovercolors>
          {% if item.image == blank %}{% include "get_svg" type:'image' size:'600x600px' %}
          {% else %}<img src="{{ item.image | img_url: 'grande' }}" alt="{{ item.image.alt }}">
          {% endif %}
          {% if item.showdescription %}
          <div class="description">
            <div class="block-table">
              <div class="block-table-cell">
                {% if item.title %}<div class="title" style="color:{{ item.color_title }}">{{ item.title }}</div>{% endif %}
                {% if item.showbtn %}<span class="btn btn-sm btn-underline" style="color:{{ item.cbtntext }}; border-color:{{ item.cbtntext }};" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-borc="{{ item.cbtntext }}" data-aborc="{{ item.acbtntext }}">{{ section.settings.btnname }}</span>{% endif %}
              </div>
            </div>
          </div>
          {% endif %}
        </a>
        {% elsif block.type == 'item2' %}
        <a href="{{ item.link }}" class="promo-box{% if section.settings.imagehover %} zoom-in{% endif %} design-02" data-hovercolors>
          {% if item.image == blank %}{% include "get_svg" type:'image' size:'600x600px' %}
          {% else %}<img src="{{ item.image | img_url: 'grande' }}" alt="{{ item.image.alt }}">
          {% endif %}
          {% if item.showdescription %}
          <div class="description small-indent">
            <div class="block-table">
              <div class="block-table-cell">
                {% unless item.image2 == blank %}
                <img class="img-responsive" src="{{ item.image2 | img_url: '200x' }}" alt="{{ item.image2.alt }}">
                {% endunless %}
                {% if item.title %}<div class="title" style="color:{{ item.color_title }}">{{ item.title }}</div>{% endif %}
                {% if item.title2 %}<p style="color:{{ item.color_title2 }}">{{ item.title2 }}</p>{% endif %}
                {% if item.showbtn %}<span class="btn btn-sm btn-underline" style="color:{{ item.cbtntext }}; border-color:{{ item.cbtntext }};" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-borc="{{ item.cbtntext }}" data-aborc="{{ item.acbtntext }}">{{ section.settings.btnname }}</span>{% endif %}
              </div>
            </div>
          </div>
          {% endif %}
        </a>
        {% elsif block.type == 'item3' %}
        <a href="{{ item.link }}" class="promo-box{% if section.settings.imagehover %} zoom-in{% endif %} design-03" data-hovercolors>
          {% if item.image == blank %}{% include "get_svg" type:'image' size:'600x600px' %}
          {% else %}<img src="{{ item.image | img_url: 'grande' }}" alt="{{ item.image.alt }}">
          {% endif %}
          {% if item.showdescription %}
          <div class="description point-{{ item.position }}">
            {% if item.title %}<div class="title" style="color:{{ item.color_title }}">{{ item.title }}</div>{% endif %}
            {% if item.showbtn %}<span class="btn" style="color:{{ item.cbtntext }}; background:{{ item.cbtnbg }};" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-bgc="{{ item.cbtnbg }}" data-abgc="{{ item.acbtnbg }}">{{ section.settings.btnname }}</span>{% endif %}
          </div>
          {% endif %}
        </a>
        {% endif %}
      </div>
      {% endfor %}
    </div>
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}
  </div>
</div>
{% endif %}


