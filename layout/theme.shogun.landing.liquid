  <link href="https://fonts.googleapis.com/css?family={{ settings.font_name }}:100,200,300,400,500,600,700,800,900" rel="stylesheet">

  
  {%- include "include_css" -%}
  {{ 'jquery-2.1.4.min.js' | asset_url | script_tag }}
