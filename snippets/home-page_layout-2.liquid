{% capture layout_2_menu %}{% section 'layout-2-menu' %}{% endcapture %}
{% assign l2mm = layout_2_menu | split: '[/mainmenu]' | first %}
{% assign l2mm = l2mm | split: '[mainmenu]' | last %}
{% assign title = layout_2_menu | split: '[/title]' | first %}
{% assign title = title | split: '[title]' | last %}
{% assign _t = '[title]' | append: title | append: '[/title]' %}
{% assign _m = '[mainmenu]' | append: l2mm | append: '[/mainmenu]' %}

<div class="container offset-56">
  <div class="visible-xs visible-sm">
    <div class="mobile-categories-toggle btn">{{ title }}</div>
  </div>
  <div class="row">
    <!-- col-center -->
    <div class="col-sm-12 col-md-8 col-lg-9  col-md-push-4 col-lg-push-3 global-first-child">
      {% section 'layout2-slider' %}
      {% section 'layout2-collections' %}
      {% section 'layout2-tabs' %}
      {% section 'layout2-tabs2' %}
      {% section 'layout2-slidersimple' %}
    </div>
    <!-- col-left -->
    <div class="col-sm-12 col-md-4 col-lg-3  col-md-pull-8 col-lg-pull-9 global-first-child">
      {{ layout_2_menu | replace: _t, '' | replace: _m, '' }}
      {% section 'layout-2-banner' %}
      {% section 'layout-2-testimonials' %}
      {% section 'layout-2-subscribe' %}
      {% section 'layout-2-customhtml' %}
    </div>
  </div>
  {% section 'layout-2-bottom_banners' %}
</div>

{% include 'main-menu-mobile' mm:l2mm anotherparent:' layout2-mobile' %}