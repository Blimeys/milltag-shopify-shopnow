<div class="container offset-14">
  <h1 class="block-title large">{{ 'customer.register.title_main' | t }}</h1>
  <div class="row">
    <div class="col-sm-8 col-sm-push-2 col-lg-6 col-lg-push-3">
      <div class="login-form-box">
        <h2 class="text-uppercase">{{ 'customer.register.title_form' | t }}</h2>
        {% form 'create_customer' %}{{ form.errors | default_errors }}
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <span class="icon icon-person_outline"></span>
              </span>
              <input type="text" name="customer[first_name]" id="LoginFormName1" class="form-control" placeholder="{{ 'customer.register.first_name' | t }}">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <span class="icon icon-person_outline"></span>
              </span>
              <input type="text" name="customer[last_name]" id="LoginFormName2" class="form-control" placeholder="{{ 'customer.register.last_name' | t }}">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <span class="icon icon-email"></span>
              </span>
              <input type="email" name="customer[email]" id="LoginEmail" class="form-control" placeholder="{{ 'customer.register.email' | t }}">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <span class="icon icon-lock_outline"></span>
              </span>
              <input type="password" name="customer[password]" id="LoginFormPass1" class="form-control" placeholder="{{ 'customer.register.password' | t }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="button-block">
                <button type="submit" class="btn">{{ 'customer.register.submit' | t }}</button>
              </div>
            </div>
            <div class="col-md-12">
              <div class="additional-links-01">{{ 'customer.general.or' | t }} <a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a></div>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>